# Review Fetcher Service Configuration

# Mode: Set to 'false' to use real Google API
MOCK_GOOGLE_API=false

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=review-fetcher-service

# Google API Configuration
GOOGLE_REQUESTS_PER_SECOND=10
GOOGLE_DAILY_QUOTA=1000

# Rate Limiting
RATELIMIT_TOKEN_BUCKET_CAPACITY=100
RATELIMIT_REFILL_RATE=10.0

# Retry Configuration
RETRY_MAX_RETRIES=3
RETRY_INITIAL_BACKOFF_MS=100
RETRY_MAX_BACKOFF_MS=10000
RETRY_BACKOFF_MULTIPLIER=2.0

# Deque Configuration
DEQUE_MAX_SIZE=10000
DEQUE_BURST_CHECK_INTERVAL_SEC=0.1
