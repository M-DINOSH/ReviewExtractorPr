# Environment Configuration for Sentiment Analysis Service
# Database
DATABASE_URL=sqlite:///./sentiment_service.db
DATABASE_TYPE=sqlite

# Redis (disabled for local testing)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false
CACHE_ENABLED=false

# Application
APP_NAME=Sentiment Analysis Service
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json