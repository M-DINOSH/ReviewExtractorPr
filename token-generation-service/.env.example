# Token Generation Service

# Application Environment
ENVIRONMENT=development
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8002
WORKERS=4

# Database Configuration
DATABASE_URL=postgresql://token_user:token_password@postgres:5432/token_service_db

# Google OAuth Configuration
GOOGLE_AUTH_URL=https://accounts.google.com/o/oauth2/v2/auth
GOOGLE_TOKEN_URL=https://oauth2.googleapis.com/token
GOOGLE_SCOPE=https://www.googleapis.com/auth/business.manage

# Token Configuration
TOKEN_EXPIRY_BUFFER=300
DEFAULT_REDIRECT_URI=http://localhost:8002/auth/callback

# Security
SECRET_KEY=change-this-in-production-use-strong-random-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Logging
LOG_LEVEL=INFO
